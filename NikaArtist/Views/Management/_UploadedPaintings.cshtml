@model NikaArtist.Service.Models.UploadModel

@using (Html.BeginForm("SaveUploadPhoto", "Management", FormMethod.Post, new { @class = "ml-3"}))
{
    @Html.ValidationSummary(true)

    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    if (Model.Uploads.Any())
    {
        <h3>Фотографии</h3>

        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th></th>
                    <th>Иконка</th>
                    <th>Путь к иконке</th>
                    <th>Путь к фотографии</th>
                    <th>Название файла</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Uploads.Count; i++)
                {
                    @Html.HiddenFor(m => m.Uploads[i].Id)
                    @Html.HiddenFor(m => m.Uploads[i].ThumbnailPath)
                    @Html.HiddenFor(m => m.Uploads[i].PhotoPath)
                    @Html.HiddenFor(m => m.Uploads[i].FileName)
                    <tr>
                        <td><i id="@Model.Uploads[i].Id" class="edit fa fa-edit" style="font-size:35px;"></i>
                        <td>
                            <img class="photo-thumbnail" src="@Url.Content(Model.Uploads[i].ThumbnailPath)?@Guid.NewGuid()" />
                        </td>
                        <td>@Model.Uploads[i].ThumbnailPath</td>
                        <td>@Model.Uploads[i].PhotoPath</td>
                        <td>
                            <a href="@Url.Content(Model.Uploads[i].PhotoPath)" target="_blank" style="color: #007bff">@Model.Uploads[i].FileName</a>
                        </td>
                        <td>
                            <i id="@Model.Uploads[i].Id" class="delete fa fa-trash" style="font-size:35px;"></i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="form-group">
            <div style="float:right; margin-right: 15px;">
                <input type="submit" class="btn btn-success" value="Сохранить изменения" />
                <a href='@Url.Action("CancelUpload")' class="btn btn-danger">Отменить и вернуться к списку фотографий</a>
            </div>
        </div>

    }
    else
    {
        <p class="mt-3">Нет загруженных файлов</p>
    }
}
