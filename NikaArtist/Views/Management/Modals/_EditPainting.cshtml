@model NikaArtist.Service.Models.PaintingUploadModel

<div id="editUploadPhotoModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Редактирование фотографии @Model.FileName</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            @using (Ajax.BeginForm(Model.Action, "Management", new AjaxOptions
			{
				OnComplete = "$('.modal').click();"
			}, new { enctype = "multipart/form-data", id = "paintingEditForm" }))
			{
            <div class="modal-body">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="pill" href="#home">Основное</a>
                    </li>
                </ul>
                <br />
                <div class="tab-content">
					<div id="home" class="tab-pane container active">
						@Html.HiddenFor(x => x.Id)
						@Html.HiddenFor(x => x.ThumbnailPath)
						@Html.HiddenFor(x => x.PhotoPath)
						@Html.HiddenFor(x => x.CreationDate)
						@Html.HiddenFor(x => x.FileName)
						@Html.HiddenFor(x => x.Order)

						<p class="language-title">Русский</p>
						<hr />
						<div class="form-group row">
							@Html.LabelFor(x => x.TitleRu, new { @class = "col-sm-4 col-form-label" })
							<div class="col-sm-8">
								@Html.TextBoxFor(x => x.TitleRu, new { @class = "form-control" })
								@Html.ValidationMessageFor(x => x.TitleRu)
							</div>
						</div>
						<div class="form-group row">
							@Html.LabelFor(x => x.DescriptionRu, new { @class = "col-sm-4 col-form-label" })
							<div class="col-sm-8">
								@Html.TextAreaFor(x => x.DescriptionRu, new { @class = "form-control" })
								@Html.ValidationMessageFor(x => x.DescriptionRu)
							</div>
						</div>
						<p class="language-title">Английский</p>
						<hr />
						<div class="form-group row">
							@Html.LabelFor(x => x.TitleEng, new { @class = "col-sm-4 col-form-label" })
							<div class="col-sm-8">
								@Html.TextBoxFor(x => x.TitleEng, new { @class = "form-control" })
								@Html.ValidationMessageFor(x => x.TitleEng)
							</div>
						</div>
						<div class="form-grou row">
							@Html.LabelFor(x => x.DescriptionEng, new { @class = "col-sm-4 col-form-label" })
							<div class="col-sm-8">
								@Html.TextAreaFor(x => x.DescriptionEng, new { @class = "form-control" })
								@Html.ValidationMessageFor(x => x.DescriptionEng)
							</div>
						</div>
						<hr />
						<div class="form-group row">
							@Html.Label("Категория", new { @class = "col-sm-4 col-form-label" })
							<div class="col-sm-8">
								@Html.DropDownListFor(x => x.CategoryId, Model.Categories, new { @class = "form-control" })
							</div>
						</div>
					</div>
                </div>
            </div>
                <div class="modal-footer">
                    <div class="clearfix"></div>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="ModalHelper.onSuccessSave(this)">Закрыть</button>
                    <button id="submitBtn" type="submit" class="btn btn-primary">Сохранить</button>
                </div>
           }
        </div>
    </div>
</div>
