@model NikaArtist.Service.Models.PaintingModelList

@if (Model.Paintings.Any())
{
<div class="row">
	<div class="table-responsive col-md-6">
		<table class="table table-hover">
			<thead class="thead-light">
				<tr>
					<th>#</th>
					<th>Иконка</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var painting in Model.Paintings.Take(Model.Paintings.Count() / 2))
				{
					<tr id="@painting.Id">
						<td class="text-center">@painting.Id</td>
						<td class="text-center"><img class="photo-thumbnail painting" src='@Url.Content(painting.ThumbPath)?@Guid.NewGuid()' /></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="table-responsive col-md-6">
		<table class="table table-hover">
			<thead class="thead-light">
				<tr>
					<th>#</th>
					<th>Иконка</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var painting in Model.Paintings.Skip(Model.Paintings.Count() / 2))
				{
					<tr id="@painting.Id">
						<td class="text-center">@painting.Id</td>
						<td class="text-center"><img class="photo-thumbnail painting" src='@Url.Content(painting.ThumbPath)?@Guid.NewGuid()' /></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
}
else
{
	<p class="mt-3">Рисунков пока нет.</p>
}

